<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_like_share"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="#e5e5e5"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_set_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:drawableLeft="@drawable/set_background"
        android:drawablePadding="@dimen/card_margin"
        android:drawableStart="@drawable/set_background"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/set" />

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:drawableLeft="@drawable/download"
        android:drawablePadding="@dimen/card_margin"
        android:drawableStart="@drawable/download"
        android:gravity="center"
        android:text="@string/download" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:drawableLeft="@drawable/like_normal"
        android:drawablePadding="@dimen/card_margin"
        android:drawableStart="@drawable/like_normal"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/like" />
</RelativeLayout>